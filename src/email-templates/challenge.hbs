{{!-- Email template for sending a new challenge --}}
{{greeting}}

<h1>{{challenge.title}}</h1>

<p>{{challenge.description}}</p>

{{#if challenge.requirements}}
<h2>Requirements</h2>
<ul>
  {{#each challenge.requirements}}
    <li>{{this}}</li>
  {{/each}}
</ul>
{{/if}}

{{#if challenge.examples}}
<h2>Examples</h2>
  {{#each challenge.examples}}
    {{!-- Use the new 'type' field to format correctly --}}
    {{#if (eq this.type 'code')}}
      <pre style="background-color: #F7FAFC; padding: 16px; border-radius: 8px; overflow-x: auto;"><code>{{this.content}}</code></pre>
    {{else}}
      {{!-- Assume 'text' type otherwise --}}
      <ul><li>{{this.content}}</li></ul> {{!-- Wrap text examples in list items --}}
    {{/if}}
  {{/each}}
{{else}}
  {{!-- Optionally mention if no examples are provided --}}
  {{!-- <p>No examples provided for this challenge.</p> --}} 
{{/if}}

{{#if challenge.hints}}
<h2>Hints</h2>
<ul>
  {{#each challenge.hints}}
    <li>{{this}}</li>
  {{/each}}
</ul>
{{/if}}

<h2>Submission Instructions</h2>
<ol>
  <li>Create your solution (filename should include the challenge ID: {{challenge.id}})</li>
  <li>Save it in the <code>submissions/</code> directory</li>
  <li>Commit and push your changes</li>
</ol>

