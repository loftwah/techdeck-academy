{
  "name": "techdeck-academy",
  "version": "1.0.0",
  "description": "AI-powered learning platform using Gemini AI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src --format esm --dts --clean",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node -r dotenv/config node_modules/.bin/vitest run",
    "test:watch": "node -r dotenv/config node_modules/.bin/vitest watch",
    "test:coverage": "node -r dotenv/config node_modules/.bin/vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "reset": "npm run build && node dist/scripts/reset-progress.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "@types/marked": "^5.0.2",
    "marked": "^15.0.11",
    "resend": "^3.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^16.5.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  }
}
